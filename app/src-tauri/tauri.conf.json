{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SecureBackup",
  "version": "0.1.1",
  "identifier": "com.mmasu.secure-backup",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SecureBackup - 差分・暗号化バックアップ",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "差分・暗号化バックアップツール",
    "longDescription": "大切なデータを安全に自動バックアップ。AES-256暗号化、差分検出、スケジュール実行対応。"
  },
  "plugins": {
    "dialog": {},
    "fs": {
      "scope": {
        "allow": ["**/*"],
        "deny": []
      }
    }
  }
}
